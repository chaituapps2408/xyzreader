<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop"
            android:transitionName="@string/transitionPhoto" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/list_item_title_padding_bottom"
            android:paddingEnd="@dimen/list_item_title_padding"
            android:paddingLeft="@dimen/list_item_title_padding"
            android:paddingRight="@dimen/list_item_title_padding"
            android:paddingStart="@dimen/list_item_title_padding"
            android:paddingTop="@dimen/list_item_title_padding"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/list_item_title_padding"
            android:paddingLeft="@dimen/list_item_title_padding"
            android:paddingRight="@dimen/list_item_title_padding"
            android:singleLine="true"
            android:textColor="@color/secondary_text" />
    </LinearLayout>

</android.support.v7.widget.CardView>
